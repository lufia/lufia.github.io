{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "html-to-react": [
        "./types/html-to-react"
      ]
    },
    "strict": false,
    "noImplicitAny": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
